<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
        <TargetFramework>netstandard2.0</TargetFramework>
        <SignAssembly>true</SignAssembly>
        <AssemblyOriginatorKeyFile>EfCore.Conventions.snk</AssemblyOriginatorKeyFile>
        <PublicSign>true</PublicSign>
        <Authors>Chaowlert Chaisrichalermpol</Authors>
        <Description>Setting EF Core by convention</Description>
        <PackageProjectUrl>https://github.com/chaowlert/EfCore.Conventions</PackageProjectUrl>
        <PackageLicenseUrl>https://github.com/chaowlert/EfCore.Conventions/blob/master/LICENSE</PackageLicenseUrl>
        <PackageIconUrl>https://user-images.githubusercontent.com/5763993/64020551-18804500-cb5c-11e9-9259-7300faf6dc93.png</PackageIconUrl>
        <RepositoryUrl>https://github.com/chaowlert/EfCore.Conventions</RepositoryUrl>
        <PackageTags>efcore convention</PackageTags>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.EntityFrameworkCore" Version="2.0.0" />
      <PackageReference Include="Microsoft.EntityFrameworkCore.Relational" Version="2.0.0" />
    </ItemGroup>

</Project>
